{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "test",
            "args": ["run", "test", "--silent"],
            "isTestCommand": true
        },
        {
            "taskName": "build",
            "args": ["run", "build", "--silent"],
            "isBuildCommand": true
        },
        {
            "taskName": "lint",
            "args": ["run", "lint", "--silent"]
        }
    ]
}